<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:ignore="MissingConstraints">
	<!-- 搜索框区域 -->
	<android.support.constraint.ConstraintLayout
		android:id="@+id/search_layout"
		android:layout_width="match_parent"
		android:layout_height="78dp"
		android:orientation="horizontal">
		<EditText
			android:id="@+id/search_query_text"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/search_query_cancel"
			android:maxLines="1"
			android:maxEms="30"/>
		<TextView
			android:id="@+id/search_query_cancel"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="取消"
			android:gravity="center"
			app:layout_constraintRight_toRightOf="parent"
			android:paddingEnd="45dp"
			android:paddingStart="40dp"/>
	</android.support.constraint.ConstraintLayout>
	<com.ogaclejapan.smarttablayout.SmartTabLayout
		android:id="@+id/search_tabs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/search_layout"
		android:background="@color/white"
		app:stl_clickable="true"
		app:stl_customTabTextLayoutId="@layout/custom_tab"
		app:stl_customTabTextViewId="@id/custom_text"
		app:stl_defaultTabTextColor="@color/color_b0b8bf"
		app:stl_defaultTabTextSize="34sp"
		app:stl_distributeEvenly="true"
		app:stl_dividerColor="@color/albumTransparent"
		app:stl_dividerThickness="0dp"
		app:stl_drawDecorationAfterTab="true"
		app:stl_indicatorAlwaysInCenter="false"
		app:stl_indicatorColor="@color/color_5e6ce7"
		app:stl_indicatorCornerRadius="4dp"
		app:stl_indicatorGravity="bottom"
		app:stl_indicatorInFront="false"
		app:stl_indicatorInterpolation="linear"
		app:stl_indicatorThickness="6dp"
		app:stl_indicatorWidth="40dp"
		app:stl_underlineThickness="0dp" />
	<android.support.v4.view.ViewPager
		android:id="@+id/search_pager"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@+id/search_tabs"/>
</android.support.constraint.ConstraintLayout>