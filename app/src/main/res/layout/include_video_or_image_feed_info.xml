<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_player_video_more"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:paddingLeft="24dp"
            android:visibility="gone"
            android:paddingRight="24dp"
            android:src="@drawable/ic_ico_video_more_white" />

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="32dp"
            android:src="@drawable/ic_ico_title_close" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_player_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:shadowColor="#45000000"
                android:shadowDx="1"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="Marie Steele:"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/video_player_feed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:maxLines="3"
                android:shadowColor="#45000000"
                android:shadowDx="1"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="它在园中乱跑，又会爬树，有时蝴蝶安详地飞过时，它也会扑过去捉。它似乎太活泼了，一点也不怕..."
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/video_player_group"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_video_group_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/video_player_group_cover"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/video_player_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="24dp"
                    android:shadowColor="#45000000"
                    android:shadowDx="1"
                    android:shadowDy="0"
                    android:shadowRadius="3.0"
                    android:text="牛奶可乐经济学"
                    android:textColor="#ffffffff"
                    android:textSize="28sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:layout_marginLeft="72dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/video_player_user_cover"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/video_player_add_user"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="68dp"
                    android:src="@drawable/ic_ico_video_attention" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/video_player_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/video_player_like_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ico_video_zan" />


                <TextView
                    android:id="@+id/video_player_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="1"
                    android:shadowColor="#45000000"
                    android:shadowDx="1"
                    android:shadowDy="0"
                    android:shadowRadius="3.0"
                    android:text="1.6w"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/video_player_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/video_player_comment_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ico_video_comment" />


                <TextView
                    android:id="@+id/video_player_omment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="1"
                    android:shadowColor="#45000000"
                    android:shadowDx="1"
                    android:shadowDy="0"
                    android:shadowRadius="3.0"
                    android:text="2345"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/video_player_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/video_player_shape_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ico_video_share" />


                <TextView
                    android:id="@+id/video_player_shape_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="1"
                    android:shadowColor="#45000000"
                    android:shadowDx="1"
                    android:shadowDy="0"
                    android:shadowRadius="3.0"
                    android:text="234"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>