<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_F6F8F9"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.2"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:text="手机号"
                android:textColor="@color/color_151b26"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textColor="#646F79"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="0.3"
                android:background="@drawable/shape_user_bind"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:paddingTop="12dp"
                android:paddingRight="14dp"
                android:paddingBottom="12dp"
                android:textColor="#5E6CE7"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#DFE6E8" />

        <LinearLayout
            android:id="@+id/user_bind_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.2"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:text="微信号"
                android:textColor="@color/color_151b26"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textColor="#646F79"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="0.3"
                android:background="@drawable/shape_user_bind"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:paddingTop="12dp"
                android:paddingRight="14dp"
                android:paddingBottom="12dp"
                android:textColor="#5E6CE7"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>