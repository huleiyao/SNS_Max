<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="30dp">
		
		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/search_user_cover"
			android:layout_width="109dp"
			android:layout_height="109dp"
			android:layout_gravity="center_vertical"
			android:src="@mipmap/iccon"
			app:riv_oval="true"/>
		
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="30dp"
			android:layout_weight="1"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/search_user_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:text="name"
				android:textColor="@color/color_151b26"
				android:textSize="30sp" />
			
			<TextView
				android:id="@+id/search_user_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:maxLines="1"
				android:text="阿里巴巴联合创始人"
				android:textColor="@color/color_b0b8bf"
				android:textSize="29sp" />
		</LinearLayout>
		<!-- 关注 -->
		<TextView
			android:id="@+id/search_user_attention"
			android:layout_width="125dp"
			android:layout_height="60dp"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"
			android:background="@drawable/shape_search_user_attention_bg"
			android:gravity="center"
			android:text="+ 关注"
			android:textColor="@color/color_5e6ce7"
			android:textSize="25sp" />
	</LinearLayout>
</LinearLayout>