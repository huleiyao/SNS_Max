<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:ignore="MissingConstraints"
	android:paddingLeft="31dp"
	android:paddingRight="41dp"
	android:paddingBottom="29dp">
	<View
		android:id="@+id/disscuss_item_line"
		style="@style/global_line"
		app:layout_constraintTop_toTopOf="parent" />
	
	<!-- 标题 -->
	<LinearLayout
		android:id="@+id/disscuss_item_title_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="1"
		android:layout_marginLeft="35dp"
		android:layout_marginTop="29dp"
		android:gravity="center_vertical"
		app:layout_constraintTop_toBottomOf="@+id/disscuss_item_line">
		<TextView
			android:id="@+id/disscuss_item_title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="标题"
			android:maxLines="1"
			android:ellipsize="end"
			android:layout_weight="1"
			android:textStyle="bold"
			android:textColor="#151B26"
			android:textSize="35sp"
			android:layout_marginRight="14dp"/>
	</LinearLayout>
	
	<TextView
		android:id="@+id/disscuss_item_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/disscuss_item_title_layout"
		android:text="描述"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_marginTop="15dp"
		android:textSize="29sp"
		android:textColor="#B0B8BF"/>
	
</android.support.constraint.ConstraintLayout>