<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/ip_color_primary"
    android:clickable="true">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_arrow_back" />

    <View
        android:layout_width="4px"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/btn_back"
        android:background="#2E2E32" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/btn_back"
        android:text="图片"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="36sp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_top_ok"
        android:minHeight="60dp"
        android:minWidth="96dp"
        android:paddingRight="32.0dp"
        android:paddingLeft="32.0dp"
        android:text="完成(0/3)"
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_del"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="24dp"
        app:srcCompat="@drawable/ic_vector_delete"
        android:visibility="gone" />
</RelativeLayout>