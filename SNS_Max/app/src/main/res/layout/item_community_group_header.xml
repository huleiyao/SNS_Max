<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="316dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="24dp"
    android:paddingTop="36dp">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/group_item_group_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_find_group_header_frame" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_frame_image_round20_30" />

        <TextView
            android:id="@+id/group_item_group_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="每天给生活拍张照"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </FrameLayout>

</LinearLayout>