<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="36dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="36dp">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:background="@drawable/shape_frame_image_round20"
        app:indicator_drawable_selected="@drawable/shape_banner_selected"
        app:indicator_drawable_unselected="@drawable/shape_banner_unselected"
        app:indicator_height="@dimen/dp_10"
        app:indicator_margin="12dp"
        app:indicator_width="@dimen/dp_10" />
</LinearLayout>