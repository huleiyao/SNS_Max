<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="32dp">

    <ImageView
        android:id="@+id/notifycation_user_cover"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="32dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/notifycation_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_151b26"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/notifycation_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_646F79"
                        android:textSize="26sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/notifycation_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1个小时前"
                    android:textColor="@color/color_b0b8bf"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/notifycation_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:maxLines="2"
                    android:text="无论你学到什么都要试着把它说出来，学会去创造价值解决问题。"
                    android:textColor="@color/color_151b26"
                    android:textSize="28sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/notifycation_cover"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="32dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/notifucation_feed_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/notifycation_is_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ico_moment_video" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/color_DFE6E8" />
    </LinearLayout>

</LinearLayout>