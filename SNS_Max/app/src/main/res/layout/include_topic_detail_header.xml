<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <ImageView
        android:id="@+id/topic_detail_header_bg_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bg_topic_defaut" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/topic_cover"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/ic_ico_topic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:shadowColor="#26000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3.0"
                    android:text="#健身房的风景#"
                    android:textColor="@color/white"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/topic_popularity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:shadowColor="#26000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3.0"
                    android:text="109.7k人气"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/topic_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:maxLines="1"
                    android:shadowColor="#26000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3.0"
                    android:text="整合话题：减肥、健身、健康饮食"
                    android:textColor="#ffffffff"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>